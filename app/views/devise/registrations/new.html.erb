<div class="row-fluid  text-center">
  <div class="span12">
    <h1 style="color:white; font-size: 18px">Amazing tool for students and professionals of the computers network area!</h1>
  </div>
</div>
<div class="row-fluid">
  <div class="span12 offset4">
    <h4 style="color:white">Signup to Firewall Tools</h4>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="row-fluid">
          <div class="span4">
            <%= f.email_field :email, class: "max-width", autofocus: true, placeholder: "your email" %>
          </div>
        </div>

      <div class="row-fluid">
        <div class="span4">
            <%= f.password_field :password, class: "max-width", placeholder: "enter a password (minimun 5 characters)" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span4">
            <%= f.password_field :password_confirmation, class: "max-width", placeholder: "confirm the password (minimun 5 characters)" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span4 text-center">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>