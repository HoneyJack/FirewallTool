<!-- Open Modal -->
<div id="open-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="openmodal" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Open Diagram</h3>
  </div>
  <div class="modal-body">
    <table id="open-files-table" class="table table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th>File Name</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
      <% unless graphic_networks.blank? %>
          <% graphic_networks.each do |gn| %>
            <tr>
                <td>
                  <%= link_to gn.name,edit_dashboard_path(gn.id), remote: true, data:{target: '#'}, method: :get, onclick: '$("#open-modal").modal("hide");'   %>
                </td>
              <td><%= gn.updated_at.strftime("%B %d, %Y") %></td>
            </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>

<script type="text/javascript">
    /* Table initialisation */
    $(document).ready(function() {
        $('#open-files-table').dataTable({paging: false, ordering: true});
    } );
</script>